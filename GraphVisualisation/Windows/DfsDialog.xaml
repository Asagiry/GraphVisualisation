<Window x:Class="GraphVisualisation.DfsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphVisualisation"
        mc:Ignorable="d"
        Height="250" Width="350" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border BorderThickness ="1" CornerRadius="16" Height="250" Width="350" BorderBrush=" Black" Background="White">
        <Canvas>
            <Border BorderThickness ="1" CornerRadius="16" Height="55" Width="300" BorderBrush=" Black" Canvas.Left="25" Canvas.Top="25">
                <Label Content ="От какой вершины запустить DFS" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18"/>
            </Border>
            <TextBox x:Name="StartNode" Height="40" Width ="200" Canvas.Left="75" Canvas.Top="125" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Content="Выбрал" Canvas.Left="75" Canvas.Top="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" FontSize="18" Click="ConfirmDialog_Click"/>
            <Button Content="Отмена" Canvas.Left="175" Canvas.Top="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" FontSize ="18" Click="CloseDialog_Click"/>
        </Canvas>
    </Border>
</Window>
